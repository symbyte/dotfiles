#!/bin/bash
# dev-lazygit - Wrapper for lazygit in the dev zellij layout
#
# Ensures the worktree exists for the session, then launches lazygit.

# Ensure worktree exists and get the path
source ~/.local/bin/dev-ensure-worktree
dev_setup_worktree

cd "$DEV_WORKTREE_PATH" || exit 1

exec lazygit "$@"
