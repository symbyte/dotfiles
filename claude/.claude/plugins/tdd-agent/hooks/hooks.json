{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx \"${CLAUDE_PLUGIN_ROOT}/hooks/post-edit.ts\"",
            "timeout": 120000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx \"${CLAUDE_PLUGIN_ROOT}/hooks/stop-guard.ts\"",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
